<%- include("../partials/header"); -%>
<h1>Compose</h1>
<hr>

<form class="" action="/compose" method="POST" >
    <div class="form-group">
        <label>Title</label>
        <input class="form-control" type="text" name="postTitle" placeholder="enter title...">
    </div>
    <div class="form-group">
        <label for="compose">Post</label>
        <textarea class="form-control" rows=3 cols=20 value="" name="postBody" placeholder="enter message..." ></textarea>
    </div>
    <button class="btn btn-primary" style="width: 75%;" type="submit" name="button">Publish</button>
</form>
